@font-face{
  font-family: columbia-reqular;
  src: url('{{ "columbia_serial-regular.otf" | asset_url }}');
}
@font-face{
  font-family: gourment-french;
  src: url('{{ "GourmetLeFrenchScript.ttf" | asset_url }}');
}

@font-face{
  font-family: work-sans;
  src: url('{{ "WorkSans-Regular.ttf" | asset_url }}');
}
@font-face{
  font-family: work-sans-medium;
  src: url('{{ "WorkSans-Medium.ttf" | asset_url }}');
}



html {
box-sizing: border-box;
font-size: 16px;
margin-top: 0 !important;
}

*, *:before, *:after {
box-sizing: inherit;
}

body, h1, h2, h3, h4, h5, h6, p, ol, ul {
margin: 0;
padding: 0;
font-weight: normal;
}

body{
  background-color:#FFFDF5;
}
a{
  text-decoration:none;
}
h1{
  font-size:44px;
  line-height:58px;
  font-kerning:20px;
}

h2{
  font-size:34px;
  line-height:38px;
  font-kerning:20px;
}

h3{
  font-size:22px;
  line-height:36px;
  font-kerning:20px;
}

.b1{
  font-size:22px;
  line-height:32px;
}

.b2{
  font-size:18px;
  line-height:24px;
}

.registeredsignhead{
  font-size:18px;
}
.registeredsignbody{
  font-size:8px;
}
@media screen and (min-width: 2000px){
    h1{
  font-size:60px;
  line-height:70px;
  font-kerning:20px;
}

h2{
  font-size:38px;
  line-height:42px;
  font-kerning:20px;
}

h3{
  font-size:24px;
  line-height:36px;
  font-kerning:20px;
}

.b1{
  font-size:18px;
  line-height:24px;
}

.b2{
  font-size:14px;
  line-height:24px;
}
}



@media screen and (max-width: 1200px){
  h1{
    font-size:32px;
    line-height:40px;
    font-kerning:20;
  }
  h2{
    font-size:28px;
    line-height:35px;
    font-kerning:20;
  }

  h3{
    font-size:22px;
    line-height:35px;
    font-kerning:20;
  }

  .b1{
    font-size:24px;
    line-height:34px;
    font-kerning:20;
  }
    .b2{
    font-size:18px;
    line-height:24px;
    font-kerning:20;
  }
}




@media screen and (max-width: 640px){
  h1{
    font-size:25px;
    line-height:33px;
    font-kerning:20;
  }
  h2{
    font-size:20px;
    line-height:30px;
    font-kerning:20;
  }

  h3{
    font-size:18px;
    line-height:24px;
    font-kerning:20;
  }

  .b1{
    font-size:18px;
    line-height:26px;
    font-kerning:20;
  }
    .b2{
    font-size:18px;
    line-height:26px;
    font-kerning:20;
  }

  .registeredsignhead{
  font-size:10px;
}
.registeredsignbody{
  font-size:5px;
}
}